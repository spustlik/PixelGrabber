<UserControl x:Class="WpfGrabber.Shell.ShellWindowMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGrabber.Shell"
             mc:Ignorable="d" 
             
             d:DesignHeight="26.5" d:DesignWidth="138"
             >
    <Grid>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open..."/>
                <MenuItem Header="Recent" ItemsSource="{Binding RecentFiles}">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Viewer">
                <MenuItem Header="Binary 8bit"/>
                <MenuItem Header="Binary 8bit mask"/>
                <MenuItem Header="Dealien"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
