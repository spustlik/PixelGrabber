<UserControl x:Class="WpfGrabber.Shell.ShellWindowMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGrabber.Shell"
             mc:Ignorable="d" 
             
             d:DesignHeight="26.5" d:DesignWidth="138"
             >
    <Grid>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open..." Click="OnOpenMenu_Click"/>
                <MenuItem Header="Recent" ItemsSource="{Binding RecentFiles}">
                    <MenuItem.ItemContainerStyle>
                        <Style TargetType="MenuItem">
                            <Setter Property="CommandParameter" Value="{Binding .}" />
                            <EventSetter Event="Click" Handler="OnRecentMenu_Click"/>
                        </Style>
                    </MenuItem.ItemContainerStyle>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" Click="OnExitMenu_Click"/>
            </MenuItem>
            <MenuItem Header="Viewer">
                <MenuItem Header="Binary 8bit"/>
                <MenuItem Header="Binary 8bit mask"/>
                <MenuItem Header="Hex dump" Click="OnViewHexDump_Click"/>
                <MenuItem Header="Dealien"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Main window" Click="MainWindow_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
